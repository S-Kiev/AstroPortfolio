---
import Menu from "../componets/Menu.astro";
import TitlePage from "../componets/TitlePage.astro";
import Button from "../componets/Button.astro";

const inputStyle = 'border border-purple-300 px-4 py-2 rounded-md hover:border-pink-400';
const texareaStyle = 'border border-purple-300 px-4 py-2 rounded-md hover:border-pink-400 md:col-span-3';

---

<Menu />

<section class="pt-20 pb-36 bg-gray-200">
    <div class="max-w-6xl mx-auto">
        <TitlePage title="Contact" subtitle="Get in touch"/> 
    </div>
    <div class="mt-16 relative max-w-4xl mx-auto">
        <div class="relative z-20 bg-white rounded-md p-12 shadow-lg">
            <form action="">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-x-8 gap-y-6 gap-10">
                    <input type="text" placeholder="Name" class={inputStyle}>
                    <input type="text" placeholder="Email" class={inputStyle}>
                    <input type="text" placeholder="Subject" class={inputStyle}>
                    <textarea rows="5" placeholder="Name" class={texareaStyle} />
                </div>

                <Button title="Send Message" />
            </form>
        </div>
    </div>
</section>